<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shape_white_line"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <ImageView
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_update"
        android:id="@+id/imageView3" />
    <TextView
        android:text="@string/msg_update"
        android:id="@+id/tv_notice_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:gravity="center_horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:maxLines="2"
        android:textColor="@color/color_black1"
        android:textSize="@dimen/micro_text_size" />
    <ImageView
        android:id="@+id/update_close"
        android:src="@drawable/umeng_update_close_bg_normal"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
        <TextView
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/msg_update_content"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:id="@+id/textView4" />
    </RelativeLayout>
    <TextView
        android:id="@+id/update_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="0dp"
        android:text=""/>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_line" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_notice_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_btn_left"
            android:gravity="center"
            android:text="@string/label_cancel"
            android:textColor="@color/color_black1"
            android:textSize="@dimen/medium_text_size2" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_line"/>

        <Button
            android:id="@+id/btn_notice_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_btn_right"
            android:gravity="center"
            android:text="@string/label_confirm"
            android:textColor="@color/color_black1"
            android:textSize="@dimen/medium_text_size2" />

    </LinearLayout>


</LinearLayout><!-- From: file:/F:/autosos/autosos_android/fastrescue_android/src/main/res/layout/dialog_msg_update.xml -->