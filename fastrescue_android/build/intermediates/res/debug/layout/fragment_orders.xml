<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_orders"
    android:keepScreenOn="true">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color_white">
        <LinearLayout
            android:weightSum="1.0"
            android:id="@+id/records"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="44.5dp">
            <LinearLayout
                android:id="@+id/push"
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="44.5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="42.0dp"
                    android:gravity="center"
                    android:text="@string/label_push"
                    android:textColor="@color/color_orange"
                    android:textSize="@dimen/large_text_size"
                    android:id="@+id/push_text"
                    android:layout_gravity="center_horizontal" />
                <View
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:id="@+id/push_view"
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_orange" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="0.50"
                android:layout_height="44.5dp">
                <TextView
                    android:id="@+id/record_text"
                    android:layout_width="wrap_content"
                    android:layout_height="42.0dp"
                    android:gravity="center"
                    android:text="@string/label_record"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/large_text_size"
                    android:layout_gravity="center_horizontal" />
                <View
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:visibility="invisible"
                    android:id="@+id/record_view"
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_black" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_line" />

    </RelativeLayout>
<android.support.v4.view.ViewPager
    android:id="@+id/viewpage"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/title_layout"
    android:layout_above="@+id/textView2">


</android.support.v4.view.ViewPager  >
    <View
        android:id="@+id/gray_view"
        android:background="@color/color_gray3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_layout"
        android:layout_above="@+id/textView2"></View>
    <include
        android:id="@+id/include"
        layout="@layout/progressbar_layout"
        android:visibility="visible" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="shuaxin   ...."
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/include"
        android:layout_alignEnd="@+id/include"
        android:id="@+id/textView2" />

</RelativeLayout>
