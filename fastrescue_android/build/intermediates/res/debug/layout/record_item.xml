<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="11dp">
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_marginTop="3dp"
                android:text="浙B12345"
                android:layout_marginLeft="5dp"
                android:textColor="@color/color_black2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/carNumber"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/type"
                android:layout_toEndOf="@+id/type" />


            <TextView
                android:text="拖车"
                android:id="@+id/type"
                android:layout_width="34dp"
                android:layout_height="20dp"
                android:background="@drawable/bg_shape_orange"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/small_text_size"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="13dp"
                android:text="2015-08-28 14:08:26"
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_gray"
                android:textSize="12sp" />


        </RelativeLayout>

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="3dp"
                android:singleLine="true"
                android:text="浙江省宁波市浙江省宁波市浙江省宁波市浙江省宁波市浙江省宁波市"
                android:textColor="@color/color_black2"
                android:id="@+id/address"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_marginRight="4dp"
                android:id="@+id/record_image"
                android:src="@drawable/icon_arrow"
                android:layout_width="8dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:layout_marginRight="13dp"
        android:layout_marginTop="20dp"
        android:text="已完成"
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/color_green"
        android:textSize="12sp" />

    <View
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_gray2" />


</RelativeLayout><!-- From: file:/F:/autosos/autosos_android/fastrescue_android/src/main/res/layout/record_item.xml -->