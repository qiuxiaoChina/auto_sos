<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:gravity="center_vertical"
        android:paddingLeft="23dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textSize="@dimen/medium_text_size2"
            android:text="原始密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/old_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#f4f4f3"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:gravity="center_vertical"
            android:hint="原密码"
            android:inputType="textPassword"
            android:textColorHint="@color/color_gray"
            android:textSize="@dimen/medium_text_size2" />

    </LinearLayout>

    <View
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignBottom="@+id/old_password"
        android:background="@color/color_line" />

    <LinearLayout
        android:gravity="center_vertical"
        android:paddingLeft="23dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textSize="@dimen/medium_text_size2"
            android:text="新的密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:gravity="center_vertical"
            android:hint="新密码"
            android:background="#f4f4f3"
            android:inputType="textPassword"
            android:textColorHint="@color/color_gray"
            android:textSize="@dimen/medium_text_size2" />

    </LinearLayout>

    <View
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignBottom="@+id/new_password"
        android:background="@color/color_line" />

    <LinearLayout
        android:gravity="center_vertical"
        android:paddingLeft="23dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textSize="@dimen/medium_text_size2"
            android:text="再次输入"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/new_password_again"
            android:background="#f4f4f3"
            android:layout_marginLeft="25dp"
            android:inputType="textPassword"
            android:textSize="@dimen/medium_text_size2"
            android:hint="确认密码"
            android:layout_width="200dp"
            android:layout_height="35dp" />

    </LinearLayout>

    <View
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignBottom="@+id/input"
        android:background="@color/color_line" />
    <Button
        android:textColor="@color/color_white"
        android:onClick="changePassword"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="确认修改"
        android:background="@drawable/bg_shape_second_green"
        />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#666"
            android:textSize="12sp"
            android:text="如果忘记原密码，请联系客服修改密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="#ff9626"
            android:textSize="12sp"
            android:text="400-882-0019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
    <include
        layout="@layout/progressbar_layout"
        android:visibility="gone" />
</RelativeLayout>
