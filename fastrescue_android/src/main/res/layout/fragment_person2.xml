<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PersonneActivity">


    <com.handmark.pulltorefresh.library.PullToRefreshScrollView

        android:id="@+id/personne_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f8f8f8"
                android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:background="#4a85bd"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.makeramen.rounded.RoundedImageView
                    android:layout_marginTop="15dp"
                    android:id="@+id/user_avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_white2"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    app:border_color="@color/color_white"
                    app:border_width="1dp"
                    app:corner_radius="3dp"
                    app:round_background="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/user_avatar"
                    android:orientation="vertical">



                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RatingBar
                        android:layout_marginLeft="25dp"
                        android:id="@+id/ratingbar_person"
                        style="@style/yellowRatingBar2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:visibility="visible" />

                    <TextView

                        android:text="5分"
                        android:textColor="@color/color_white"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:layout_marginTop="5dp"
                    android:text="林蛋大"
                    android:id="@+id/name_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <!--<TextView-->
                    <!--android:layout_marginTop="5dp"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/phone"-->
                    <!--android:textColor="@color/color_white"-->
                    <!--android:textSize="15sp" />-->
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/order_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/ordersum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="累计接单"
                    android:textColor="#333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:textColor="#7c7c7c"
                    android:textSize="@dimen/medium_text_size2" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_line" />


            <RelativeLayout
                android:visibility="visible"
                android:id="@+id/seting"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_weight="1">

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/label_setting_password"
                    android:textColor="#333"
                    android:textSize="16sp" />

               <ImageView
                   android:layout_alignParentRight="true"
                   android:src="@drawable/icon_arrow"
                   android:layout_width="8dp"
                   android:layout_height="33dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="2dp"
                android:background="@color/color_line" />

            <RelativeLayout
                android:visibility="visible"
                android:id="@+id/statement"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_weight="1">

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="结算报表"
                    android:textColor="#333"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_arrow"
                    android:layout_width="8dp"
                    android:layout_height="33dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="2dp"
                android:background="@color/color_line" />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/account"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_weight="1">

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="账户余额"
                    android:textColor="#333"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_arrow"
                    android:layout_width="8dp"
                    android:layout_height="33dp" />
            </RelativeLayout>

            <View
                android:visibility="gone"
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_line" />



