<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f8f8f8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:inputType="number"
        android:paddingLeft="23dp"
        android:background="#ffffff"
        android:textSize="17sp"
        android:textColor="#88cc44"
        android:hint="确认提现金额"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:textColor="#aaa"
        android:layout_marginLeft="23dp"
        android:text="提现到银行卡"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:gravity="center_vertical"
        android:background="#fff"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:text="图"
            android:layout_marginLeft="23dp"
            android:id="@+id/bank_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/bank_icon"
            android:text="工商银行"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_bank_number"
            android:layout_marginRight="23dp"
            android:layout_alignParentRight="true"
            android:text="5458854758964785"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#666"
            android:textSize="12sp"
            android:text="请核对您的银行卡号，如有误，请联系客服"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="#ff9626"
            android:textSize="12sp"
            android:text="400-882-0019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:layout_marginTop="80dp"
        android:textColor="#f8f8f8"
        android:text="申请提现"
        android:layout_marginRight="23dp"
        android:layout_marginLeft="23dp"
        android:background="@drawable/bg_btn_second_green"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

</LinearLayout>